@model ContactAPI.Models.ContactViewModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt style="display:none">
            @Html.DisplayNameFor(model => model.ContactId)
        </dt>

        <div id="ContactId" style="display:none">
            <dd>
                @Html.DisplayFor(model => model.ContactId)
            </dd>
        </div>


        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Email)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>

        <dt>
            Phone Number
        </dt>

        <dd>
            @Html.DisplayFor(model => model.PhoneNo)
        </dd>

    </dl>

    @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button id="deleteResultsButton" class="btn btn-default btn-danger">Delete</button>
        </div>
    </div>

    <div>
        @Html.Partial("_BackToListButtonPartial")
    </div>
</div>
